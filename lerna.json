{
  "packages": [
    ".",
    "packages/*"
  ],
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "version": {
      "message": "chore: release packages"
    },
    "publish": {
      "registry": "https://npm.pkg.github.com"
    }
  },
  "ignoreChanges": [
    "src/**",
    "**/CHANGELOG.md",
    "**/node_modules/**",
    "**/package.json",
    "lerna.json",
    "**/package-lock.json",
    "**/*.yaml"
  ]
}